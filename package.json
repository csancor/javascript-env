{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "JavaScript development environment",
  "scripts": {
    "prestart": "babel-node build-scripts/start-msg.js",
    "start": "npm-run-all --parallel open:src lint-watch test-watch start-mockapi",
    "open:src": "babel-node build-scripts/src-server",
    "lint": "esw webpack.config.* src build-scripts --color",
    "lint-watch": "npm run lint -- --watch",
    "test": "mocha --reporter progress build-scripts/test-setup.js \"src/**/*.test.js\"",
    "test-watch": "npm run test -- --watch",
    "generate-mock-data": "babel-node build-scripts/generateMockData",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/api/db.json --port 3001",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "babel-node build-scripts/build.js",
    "postbuild": "babel-node build-scripts/distServer.js",
    "deploy": "surge ./dist"
  },
  "author": "Cory House",
  "license": "MIT",
  "dependencies": {
    "@types/faker": "^4.1.9",
    "babel": "^6.23.0",
    "babel-node": "0.0.1-security",
    "core-util-is": "^1.0.2",
    "faker": "^4.1.0",
    "jshint": "^2.11.0",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-cli": "6.16.0",
    "babel-core": "6.17.0",
    "babel-loader": "6.2.5",
    "babel-preset-latest": "6.16.0",
    "babel-register": "6.16.3",
    "chai": "3.5.0",
    "chalk": "1.1.3",
    "cheerio": "0.22.0",
    "compression": "^1.7.4",
    "cross-env": "3.1.3",
    "css-loader": "0.25.0",
    "eslint": "3.8.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-watch": "2.1.14",
    "express": "^4.17.1",
    "extract-text-webpack-plugin": "1.0.1",
    "html-webpack-plugin": "2.22.0",
    "jsdom": "16.5.0",
    "json-schema-faker": "^0.4.7",
    "json-server": "^0.15.1",
    "localtunnel": "1.8.1",
    "mocha": "3.1.2",
    "nock": "8.1.0",
    "npm-run-all": "3.1.1",
    "nsp": "2.6.2",
    "numeral": "1.5.3",
    "open": "0.0.5",
    "rimraf": "2.5.4",
    "style-loader": "0.13.1",
    "surge": "^0.21.3",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "1.8.4",
    "webpack-hot-middleware": "2.25.2",
    "webpack-md5-hash": "0.0.5"
  }
}
